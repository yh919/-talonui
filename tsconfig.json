{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/index.tsx"],
  "exclude": ["node_modules"]
}
